@model IEnumerable<MVC_CC9.Models.Movie>

@{
    ViewBag.Title = "Movies Released in Year";
}

<h2>Movies Released in @ViewBag.Year</h2>

<table class="table">
    <tr>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Date of Release</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.MovieName</td>
            <td>@movie.DirectorName</td>
            <td>@movie.DateOfRelease.ToShortDateString()</td>
        </tr>
    }
</table>
